# Cogito Hardware Service Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001

# Device Information
DEVICE_ID=cogito-radio-001
DEVICE_NAME=Cogito FM Radio

# Hardware Settings
BUTTON_GPIO_PIN=17
I2C_BUS=1
RADIO_I2C_ADDRESS=0x60

# Audio Configuration
MICROPHONE_DEVICE=plughw:1,0
SPEAKER_DEVICE=plughw:0,0

# AI Mode Settings
AI_TIMEOUT_SECONDS=10
ACTIVITY_CHECK_INTERVAL=1

# Backend URL (if using cloud backend for logging)
# Leave empty if running standalone
BACKEND_URL=

# Logging
LOG_LEVEL=info
