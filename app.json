{
  "expo": {
    "name": "boltzman",
    "slug": "boltzman",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/BoltzmanIcon.png",
    "scheme": "boltzman",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ai.boltzman.mobile",
      "buildNumber": "2",
      "googleServicesFile": "./ios/Boltzman/GoogleService-Info.plist",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to enable voice interactions.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.982819248587-bkt9i9g3sain3pd26eecsrojs49gkobo"
            ]
          }
        ]
      },
      "minVersion": "15.1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/BoltzmanIcon.png",
        "backgroundColor": "#000000"
      },
      "package": "ai.boltzman.mobile",
      "permissions": ["RECORD_AUDIO"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "react-native-reanimated",
      "expo-dev-client",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.982819248587-bkt9i9g3sain3pd26eecsrojs49gkobo"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/splash.png",
          "resizeMode": "cover",
          "backgroundColor": "#000000"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
